<!DOCTYPE benchmark PUBLIC "+//IDN sosy-lab.org//DTD BenchExec benchmark 2.3//EN" "http://www.sosy-lab.org/benchexec/benchmark-2.3.dtd">

<benchmark tool="cpachecker" timelimit="900 s" hardtimelimit="1000 s" memlimit="8000 MB" cpuCores="2">
    <option name="--benchmark"/>
    <option name="--heap">4000M</option>
    <option name="--option">cpa.predicate.memoryAllocationsAlwaysSucceed=true</option>

    <rundefinition name="PredicateDelegatingRefiner">
        <option name="--predicateAnalysis-delegatingrefiner"/>
        <option name="--option">cpa.predicate.redundancyDSLPath=redundancyRules.json</option>
    </rundefinition>

    <rundefinition name="ABEl">
        <option name="--predicateAnalysis-PredAbsRefiner-ABEl"/>
    </rundefinition>

    <tasks name="Loops">
        <include>../programs/benchmarks/loop-new/*.c</include>
        <include>../programs/benchmarks/loops/*.c</include>
        <include>../programs/benchmarks/loop-simple/*.c</include>
        <propertyfile>../programs/benchmarks/properties/unreach-call.prp</propertyfile>
    </tasks>

</benchmark>



