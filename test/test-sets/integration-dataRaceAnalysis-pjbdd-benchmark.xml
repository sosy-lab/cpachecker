<!DOCTYPE benchmark PUBLIC "+//IDN sosy-lab.org//DTD BenchExec benchmark 2.3//EN" "http://www.sosy-lab.org/benchexec/benchmark-2.3.dtd">
<benchmark tool="cpachecker" timelimit="1800 s" hardtimelimit="2000 s" memlimit="32 GB" cpuCores="8">

  <option name="--no-output-files"/>
  <option name="--heap">1500M</option>


  <rundefinition name="JAVADD--dataRaceAnalysis">
  </rundefinition>
  <rundefinition name="PJBDD-OBDD--predicateAnalysis">
    <option name="--option">bdd.package=PJBDD</option>
  </rundefinition>
  <rundefinition name="PJBDD-intDD--predicateAnalysis">
    <option name="--option">bdd.package=PJBDD</option>
    <option name="--option">bdd.pjbdd.useDDType=IntDD</option>
    <option name="--option">bdd.pjbdd.tableType=CASArray</option>
    <option name="--option">bdd.pjbdd.synchronizeReordering=false</option>
  </rundefinition>
  <rundefinition name="PJBDD-TaggedDD--predicateAnalysis">
    <option name="--option">bdd.package=PJBDD</option>
    <option name="--option">bdd.pjbdd.useDDType=TaggedDD</option>
    <option name="--option">bdd.pjbdd.parallelizationType=None</option>
    <option name="--option">bdd.pjbdd.tableType=CASArray</option>
    <option name="--option">bdd.pjbdd.synchronizeReordering=false</option>
  </rundefinition>

  <tasks>
    <includesfile>../programs/benchmarks/Concurrency.set</includesfile>
    <propertyfile>../programs/benchmarks/properties/no-data-race.prp</propertyfile>
  </tasks>

</benchmark>
