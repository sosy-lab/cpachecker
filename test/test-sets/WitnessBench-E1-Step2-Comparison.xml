<?xml version="1.0"?>


<!DOCTYPE benchmark PUBLIC "+//IDN sosy-lab.org//DTD BenchExec benchmark 2.3//EN" "http://www.sosy-lab.org/benchexec/benchmark-2.3.dtd">

<benchmark tool="cpachecker" timelimit="60 s" hardtimelimit="90 s" memlimit="3 GB" cpuCores="2">

  
  <option name="--benchmark"/>
  <option name="--heap">2000M</option>

  <!-- Step 2: Baseline - Empty Precision Value Analysis (for comparison) -->
  <rundefinition name="step2-empty-precision-baseline">
    <option name="--valueAnalysis"/>
  </rundefinition>

  <!-- Step 3: Generate witness-based precision and perform analysis -->
  <rundefinition name="step3-witness-precision-analysis">
    <option name="--valueAnalysis"/>
    <requiredfiles>../results/WitnessBench-E1-Step1-Generation.2025-10-04_17-54-14.files/step1-witness-generation/${taskdef_name}/output/witness-experiment1.yml</requiredfiles>
    <option name="--option">cpa.value.initialWitnessPrecisionFile=test/results/WitnessBench-E1-Step1-Generation.2025-10-04_17-54-14.files/step1-witness-generation/${taskdef_name}/output/witness-experiment1.yml</option>

    <option name="--option">cpa.value.precisionFile=output/precision-experiment1.txt</option>
    
  </rundefinition>

  <resultfiles>**/*experiment1.*</resultfiles>

  <!-- Select suitable programs for testing precision effect -->
   <tasks name="loop-invariants-bin-suffix-5-Test">
    <include>../programs/benchmarks/loop-invariants/bin-suffix-5.yml</include>
  </tasks>

</benchmark>
