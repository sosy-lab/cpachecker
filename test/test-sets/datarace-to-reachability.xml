<!DOCTYPE benchmark PUBLIC "+//IDN sosy-lab.org//DTD BenchExec benchmark 1.18//EN"
  "https://www.sosy-lab.org/benchexec/benchmark-1.18.dtd">

<benchmark tool="cpachecker" timelimit="900s" hardtimelimit="1000s" memlimit="8000 MB" cpuCores="4">

  <!-- Set heap size for CPAcheckerâ€™s Java process -->
  <option name="--heap">7000M</option>

  <!-- Specify the verification property (reachability of error function) -->
  <propertyfile>../../config/properties/unreach-call.prp</propertyfile>

  <!-- Choose the analysis algorithm -->
  <option name="--predicateAnalysis-PredAbsRefiner-ABEl"/>

  <!-- Define a simple run configuration -->
  <rundefinition name="run-predicateAnalysis">
    <!-- Enables performance mode: disables logs/output files -->
    <option name="--benchmark"/>
  </rundefinition>

  <!-- Define the task: your transformed program -->
  <tasks name="bigshot_transformed">
    <include>test/programs/datarace-to-reachability/bigshot_p_transformed.c</include>
  </tasks>

</benchmark>
