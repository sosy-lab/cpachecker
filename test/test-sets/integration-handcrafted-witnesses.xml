<!DOCTYPE benchmark PUBLIC "+//IDN sosy-lab.org//DTD BenchExec benchmark 1.0//EN" "http://www.sosy-lab.org/benchexec/benchmark-1.0.dtd">
<benchmark tool="cpachecker" timelimit="60 s" hardtimelimit="90 s" memlimit="3 GB" cpuCores="2">

  <option name="--heap">2000M</option>

  <rundefinition>
    <option name="--witnessValidation"/>
  </rundefinition>

  <tasks name="C.unreach-call.CorrectnessWitnesses">
    <includesfile>../programs/benchmarks/CorrectnessWitnesses.set</includesfile>
    <propertyfile>../programs/benchmarks/properties/unreach-call.prp</propertyfile>
  </tasks>

  <tasks name="C.unreach-call.ViolationWitnesses">
    <includesfile>../programs/benchmarks/ViolationWitnesses.set</includesfile>
    <propertyfile>../programs/benchmarks/properties/unreach-call.prp</propertyfile>
  </tasks>

  <tasks name="C.termination.ViolationWitnesses">
    <includesfile>../programs/benchmarks/ViolationWitnesses.set</includesfile>
    <propertyfile>../programs/benchmarks/properties/termination.prp</propertyfile>
  </tasks>

</benchmark>
