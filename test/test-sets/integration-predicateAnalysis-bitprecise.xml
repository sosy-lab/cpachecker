<?xml version="1.0"?>
<!DOCTYPE benchmark SYSTEM "benchmark.dtd">
<benchmark tool="cpachecker" timelimit="60" hardtimelimit="90" memlimit="5000" cpuCores="2">
  <!-- try to make it more deterministic -->
  <option name="-setprop">cpa.predicate.mathsat5.furtherOptions=random_seed=42</option>
  <option name="-noout"/>

  <option name="-heap">2000M</option>
  <option name="-timelimit">1min</option>

  <propertyfile>../programs/benchmarks/PropertyERROR.prp</propertyfile>

  <rundefinition>
    <sourcefiles>
      <includesfile>../programs/benchmarks/Simple.set</includesfile>
      <option name="-setprop">cpa.predicate.handlePointerAliasing=false</option>
      <exclude>../programs/benchmarks/ntdrivers/diskperf_true-unreach-label.i.cil.c</exclude>
    </sourcefiles>
    <sourcefiles>
      <includesfile>../programs/simple/simple.set</includesfile>
      <includesfile>../programs/benchmarks/ControlFlowInteger.set</includesfile>
      <includesfile>../programs/benchmarks/HeapManipulation.set</includesfile>
      <includesfile>../programs/benchmarks/Loops.set</includesfile>
      <includesfile>../programs/benchmarks/Sequentialized.set</includesfile>
      <exclude>../programs/benchmarks/seq-mthreaded/*</exclude>
      <exclude>../programs/benchmarks/seq-pthread/*</exclude>
      <exclude>../programs/benchmarks/systemc/mem_slave_tlm.2_true-unreach-label_false-termination.cil.c</exclude>
    </sourcefiles>
    <sourcefiles>
      <includesfile>integration-DeviceDrivers64.set</includesfile>
      <option name="-skipRecursion"/>
      <option name="-64"/>
      <exclude>../programs/benchmarks/ldv-linux-3.0/module_get_put-drivers-hwmon-it87.ko_true-unreach-label.cil.out.i.pp.cil.c</exclude>
    </sourcefiles>
    <option name="-predicateAnalysis-bitprecise"/>
  </rundefinition>

  <columns>
    <column title="total">time for CPAchecker</column>
    <column title="cpa time">time for CPA algorithm</column>
  </columns>
</benchmark>
